<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
                "-//Hibernate/Hibernate Mapping DTD//EN"
                "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
<class name="ticket.model.Buyer"
       table="Buyers">
    <id name="id" column="id">
            <generator class="increment"/>
    </id>
        <property
                name="idAR"
                column="idAR"/>
        <property
                name="firstName"
                column="firstName"/>
        <property
                name="lastName"
                column="lastName"/>
        <property
                name="noTickets"
                column="noTickets"/>
    </class>
</hibernate-mapping>